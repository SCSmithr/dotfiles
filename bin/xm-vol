#!/bin/bash

mute_template="(mute)"

format_vol_status() {
    local curr
    curr=$(vol get)
    local mute
    mute=$(pamixer --get-mute)
    if [ "$mute" == "false" ]; then
        echo "$curr%"
    else
        echo "$curr% $mute_template"
    fi
}

echo " vol: <fc=#96A7A9>$(format_vol_status)</fc>"

