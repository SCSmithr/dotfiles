#!/bin/bash

mute_template="<fc=#D6D6D6>(mute)</fc>"

format_vol_status() {
    local curr
    curr=$(vol get)
    local mute
    mute=$(pamixer --get-mute)
    if [ "$mute" == "false" ]; then
        echo "$curr%"
    else
        echo "$curr% $mute_template"
    fi
}

echo " <fc=#D6D6D6>vol:</fc> $(format_vol_status)"

