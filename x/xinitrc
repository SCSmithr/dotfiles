xsetroot -cursor_name left_ptr
hsetroot -solid "#FDF6E3"

xrdb ~/.Xresources

case $HOSTNAME in
    "system22")
        echo "Xft.dpi: 144" | xrdb -merge
        echo "*dpi: 144" | xrdb -merge
        if [ -f ~/.icm/Y2XND_LQ156D1.icm ]; then
            xcalib ~/.icm/Y2XND_LQ156D1.icm
        fi
        ;;
esac

# Change caplock to left control
xmodmap ~/.xmodmap
xcape -e 'Control_L=Escape'

# Disable middle mouse paste for gtk programs.
gsettings set org.gnome.desktop.interface gtk-enable-primary-paste false

dbus-update-activation-environment --systemd DISPLAY
eval $(/usr/bin/gnome-keyring-daemon --start --components=pkcs11,secrets,ssh)
export SSH_AUTH_SOCK

dunst&

# Set up lockscreen
xset s 300 5 # Lock after 5 minutes
xss-lock -l -- i3lock -c 96A7A9&

exec xmonad
