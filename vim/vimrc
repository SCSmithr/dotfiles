set nocompatible
filetype off

" Vundle
" set the runtime path to include Vundle and initialize
set rtp+=~/.vim/bundle/Vundle.vim
call vundle#begin()

" let Vundle manage Vundle, required
Plugin 'VundleVim/Vundle.vim'
" Rust
Plugin 'rust-lang/rust.vim'
" Go
Plugin 'fatih/vim-go'
" Git
Plugin 'tpope/vim-fugitive'
Plugin 'airblade/vim-gitgutter'
" Nerdtree, file tree
Plugin 'scrooloose/nerdtree'

call vundle#end()
filetype plugin indent on
set encoding=utf-8

" Tab stuff
set tabstop=4
set shiftwidth=4
set expandtab
set smarttab
set autoindent

"Things
set number
set hlsearch
set noerrorbells
set showmatch
set cursorline
set showcmd

" Wild menu/ completion
set wildmenu
set wildmode=longest:full,full
set omnifunc=syntaxcomplete#Complete

" Mouse
set mouse=a
set ttymouse=xterm2 " allows window resizing in tmux

" Backspace
set backspace=indent,eol,start

" Location for swap files
set directory^=$HOME/.vim/tmp//

syntax on
colorscheme custom-base16-dark

" status line colors
hi User1 ctermfg=green ctermbg=08
hi User2 ctermfg=cyan ctermbg=08

" Always show statusline
set laststatus=2

set statusline=
set statusline +=%1*\ %n\ %*            " buffer num
set statusline +=\%f\ %m\ %r\ %*       " file name, modified, readonly
set statusline +=%=                     " left/ right separator
set statusline +=%2*\ %c\ %*            " cursor column
set statusline +=\%L\ %*               " total lines

" vim-go settings
let g:go_fmt_command = "goimports"
let g:go_highlight_functions = 1
let g:go_highlight_methods = 1

" NERDTree settings
" Expand dir, open files with single click
let NERDTreeMouseMode = 3
let NERDTreeShowHidden = 1
let NERDTreeMinimalUI = 1

" Shortcuts
" Ctrl-space to autocomplete
inoremap <C-@> <C-x><C-o>

" Toggle nerdtree with Ctrl-n
nnoremap <C-n> :NERDTreeToggle<CR>

