set nocompatible
filetype off

" Vundle
" set the runtime path to include Vundle and initialize
set rtp+=~/.vim/bundle/Vundle.vim
call vundle#begin()

" let Vundle manage Vundle, required
Plugin 'VundleVim/Vundle.vim'
" Rust
Plugin 'rust-lang/rust.vim'
" Go
Plugin 'fatih/vim-go'
" Git
Plugin 'tpope/vim-fugitive'
Plugin 'airblade/vim-gitgutter'
" Nerdtree, file tree
Plugin 'scrooloose/nerdtree'
" Easy commenting
Plugin 'tpope/vim-commentary'
" Show buffers
Plugin 'ap/vim-buftabline'

call vundle#end()
filetype plugin indent on
set encoding=utf-8

" Tab stuff
set tabstop=4
set shiftwidth=4
set expandtab
set smarttab
set autoindent

"Things
set number
set hlsearch
set incsearch
set noerrorbells
set showmatch
set cursorline
set showcmd
set lazyredraw

" Wild menu/ completion
set wildmenu
set wildmode=longest:full,full
set omnifunc=syntaxcomplete#Complete

" Mouse
set mouse=a
set ttymouse=xterm2 " allows window resizing in tmux

" Backspace
set backspace=indent,eol,start

" Location for swap files
set directory^=$HOME/.vim/tmp//

" Switch buffers without having to save
set hidden

syntax on
colorscheme custom-base16-dark

" status line colors
hi User1 ctermfg=00 ctermbg=02
hi User2 ctermfg=00 ctermbg=15

" Always show statusline
set laststatus=2

set statusline=
set statusline +=%1*\ %n\ %*            " buffer num
set statusline +=\ %f\ %m\ %r\ %*       " file name, modified, readonly
set statusline +=%=                     " left/ right separator
set statusline +=%2*\ %c\ :\ %l/%L\ %*  " cursor column, current line, total

" vim-go settings
let g:go_fmt_command = "goimports"
let g:go_highlight_functions = 1
let g:go_highlight_methods = 1

" NERDTree settings
" Expand dir, open files with single click
let NERDTreeMouseMode = 3
let NERDTreeShowHidden = 1
let NERDTreeMinimalUI = 1

" buftabline settings
let g:buftabline_numbers = 1 " show buffer numbers
let g:buftabline_show = 1 " Only show when there are multiple buffers

" Shortcuts

" Remap leader to ,
let mapleader = ","

" Ctrl-space to autocomplete
inoremap <C-@> <C-x><C-o>

" Toggle nerdtree with leader-n
map <leader>n :NERDTreeToggle<CR>

" Cycle betwen buffers using leader-a and leader-s
map <leader>a :bp<CR>
map <leader>s :bn<CR>

" Delete current buffer with leader-bd
map <leader>bd :bd<CR>
